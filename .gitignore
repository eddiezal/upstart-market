node_modules/\ndist/\n.env
cat <<EOL > .gitignore
# Ignore Node dependencies
node_modules/
package-lock.json

# Build and cache
dist/
.vite/
.cache/

# Environment variables
.env
.env.local
.env.development
.env.production
.env.test

# Logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# Editor settings & OS files
.vscode/
.idea/
.DS_Store
Thumbs.db

# TypeScript build artifacts
*.tsbuildinfo

# Git-related
.git/

# Ignore compiled CSS if using a preprocessor
src/**/*.css.map
EOL
